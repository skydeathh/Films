<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:vm="clr-namespace:Films.ViewModels"
                    xmlns:view="clr-namespace:Films.Views"
                    xmlns:flms="clr-namespace:Films">

    <DataTemplate DataType="{x:Type vm:HomeViewModel}">
        <view:Home/>
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm:FilmViewModel}">
        <view:Film/>
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm:FavoritesViewModel}">
        <view:Favorites/>
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm:MainViewModel}">
        <flms:MainWindow/>
    </DataTemplate>

</ResourceDictionary>